<!DOCTYPE html>
<html>
  <head>
    <title>Recipes</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <nav class="navbar navbar-default">
  <div class="container-fluid">

    <div class="navbar-header">
      <a class="navbar-brand" href="http://localhost:3000/"><strong>Social</strong> Recipes</a>
    </div>

    <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
      <form role="form" action="/">
        <ul class="nav navbar-nav navbar-right">
          <% if user_signed_in? %>
            <li><%=link_to "Olá #{current_user.email}", edit_user_registration_path %></li>
            <li><%= link_to('Logout', destroy_user_session_path, :method => :delete) %></li>
            <li><%= link_to 'Minhas Receitas', user_path(current_user.id) %></li>
          <% else %>
            <li><%= link_to 'Entrar', new_user_session_path %></li>
          <% end %>
          <li><%= link_to 'Cadastrar receitas', new_recipe_path %></li>
          <li><%= link_to 'Cadastrar usuários', new_user_registration_path %></li>
          <li><%= link_to 'Cadastrar cozinha', new_cookery_path %></li>
          <li><%= link_to 'Cadastrar tipo de comida', new_food_path %></li>
            <%= form_tag(root_path, :method => :get) do %>
              <li><%= text_field_tag 'search', nil, placeholder: 'Ex: bolo...' %></li>
              <li><%= submit_tag 'Buscar' %></li>
            <% end %>
          </ul>
      </form>
    </div>
</nav>

  <section>
    <% if @search_recipes.present? %>
      <% @search_recipes.each do |recipe| %>
      <div class="col-md-12">
        <h3><%= link_to recipe.name, recipe_path(recipe) %></h3>
        <p><%= recipe.ingredients %></p>
          </div>
      <% end %>
  </section>
</div>
<% end %>
    <%= notice %>
    <%= alert %>
    <%= yield %>
  </body>
</html>
